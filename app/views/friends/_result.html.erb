<% if params[:action] == 'search' %>
  <div class="results-block">
    <%= bootstrap_flash %>
  </div>
<% end %>

<% if @users %>
  <% if @users.size > 0 %>
    <div id="friend-lookup-results" class="well results-block col-md-10">
      <table class="search-results-table col-md-12">
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td>Name: <%= user.full_name %></td>
            <td>Email: <%= user.email %></td>
            <td>Profile: <%= link_to "View Profile", user_path(user), class: "btn btn-xs btn-success" %>
              <% if current_user.not_friend_with?(user) %>
                         <%= link_to 'add as friend', add_friend_path(user: current_user, friend: user),
                         class: 'btn btn-xs btn-success', method: :post %></td>
              <% end %>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>
<% end %>